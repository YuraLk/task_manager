{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
      ]
    },
    "resolveJsonModule": true,
    "lib": [
      "esnext"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}